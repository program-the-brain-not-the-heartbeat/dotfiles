# ~/.wgetrc

user_agent = "Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:146.0) Gecko/20100101 Firefox/146.0"

# Timeouts & retries
timeout = 60
tries = 5
retry_connrefused = on

# Use robust HTTPS by default
https_only = on
check_certificate = on

# Progress bar style
progress = bar:force

# Where to put downloads (override with -P when needed)
#directory_prefix = ~/Downloads

# Limit download rate (comment out unless needed)
#limit_rate = 2m

# HSTS support (creates ~/.wget-hsts)
hsts = on

# Don’t clobber existing files (append .1, .2, …)
no_clobber = on

# IPv4 only if your IPv6 is flaky
#inet4_only = on
